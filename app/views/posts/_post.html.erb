<div class="col">
  <div class="card shadow-sm">
    <%# <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
    </svg> %>
    <%= image_tag post.image %>
    <div class="card-body">
      <p class="card-text"><%= post.title %></p>
      <% if user_signed_in? && current_user.id == post.user_id %>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a><%= link_to(post_path(post.id), class:"btn btn-sm btn-outline-secondary") do %>View</a><% end %>
            <a><%= link_to(edit_post_path(post.id), method: :get, class:"btn btn-sm btn-outline-secondary") do %>Edit</a><% end %>
          </div>
          <small class="text-muted"><%= post.user.nickname %></small>
        </div>
      <% else %>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a><%= link_to(post_path(post.id), class:"btn btn-sm btn-outline-secondary") do %>View</a><% end %>
            <a><%= link_to(user_path(post.id), class:"btn btn-sm btn-outline-secondary") do %>MyPage</a><% end %>
          </div>
          <small class="text-muted"><%= post.user.nickname %></small>
        </div>
      <% end %>
    </div>
  </div>
</div>